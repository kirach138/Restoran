<Window x:Class="WpfApp1.W_Table"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
                Title="Table" Height="450" Width="500">
    <Grid Background="#402309">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="47.6"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel  Width="450">

            <TextBlock Text="Столик №" 
                                               Foreground="#F0E8CC"
 HorizontalAlignment="Left" 
Margin="10, 30, 10, 10"
 />
            <TextBlock Text="Количество мест:" 
                                               Foreground="#F0E8CC"
 HorizontalAlignment="Left" 
                           VerticalAlignment="Top"
Margin="10, 10, 10, 10"
 />
            <TextBlock Text="Цена предоплаты:" 
                                               Foreground="#F0E8CC"
 HorizontalAlignment="Left" 
                           VerticalAlignment="Top"
Margin="10, 10, 10, 10"
 />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Top">

                <TextBlock Text="Дата:" 
                                               Foreground="#F0E8CC"
                           VerticalAlignment="Top"
Margin="0, 10, 90, 10"
 />
                <TextBlock Text="Время:" 
                                               Foreground="#F0E8CC"
                           VerticalAlignment="Top"
Margin="0, 10, 70, 10"
 />
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" DockPanel.Dock="Top">

                <ComboBox 
    
        Margin="10" 
        Height="30"
        Width="100" SelectionChanged="ComboBox_SelectionChanged" >

                    <ComboBoxItem Content="Дата 1"/>
                    <ComboBoxItem Content="Дата 2"/>
                    <ComboBoxItem Content="Дата 3"/>
                </ComboBox>
                <ComboBox 
        Margin="10" 
        Height="30"
        Width="100" SelectionChanged="ComboBox_SelectionChanged">

                    <ComboBoxItem Content="Время 1"/>
                    <ComboBoxItem Content="Время 2"/>
                    <ComboBoxItem Content="Время 3"/>
                </ComboBox>
            </StackPanel>
            <Button Content="Забронировать"
                    Background="#F0E8CC"
                    Foreground="#402309"
    DockPanel.Dock="Bottom"
    Margin="5, 100, 5, 5" 
    Padding="10"
    Width="200"
    Height="50"
   />
        </StackPanel>

    </Grid>
</Window>