<Window x:Class="WpfApp1.W_Dish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Информация о блюде" 
        Height="500" 
        Width="600"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryColor" Color="#402309"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#F0E8CC"/>
        <SolidColorBrush x:Key="TextLightColor" Color="#F0E8CC"/>
        <SolidColorBrush x:Key="TextDarkColor" Color="#402309"/>

        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextLightColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,5"/>
        </Style>

        <Style x:Key="InfoTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#F8B85B"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10,5,10,2"/>
        </Style>

        <Style x:Key="ProductItemStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextLightColor}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="20,2,10,2"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource PrimaryColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#301A07" 
                Padding="15">
            <TextBlock x:Name="DishTitle"
                       Text="Название блюда" 
                       Foreground="{StaticResource TextLightColor}"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Основная информация -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Изображение блюда -->
                <Border Grid.Column="0"
                        Width="200"
                        Height="200"
                        Background="#5A3413"
                        CornerRadius="10"
                        Margin="0,0,20,0"
                        BorderBrush="#F8B85B"
                        BorderThickness="1">
                    <TextBlock Text="🍲"
                               FontSize="60"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="{StaticResource TextLightColor}"/>
                </Border>

                <!-- Детали блюда -->
                <StackPanel Grid.Column="1">
                    <!-- Описание -->
                    <TextBlock Style="{StaticResource InfoTitleStyle}" 
                               Text="Описание:"/>
                    <TextBlock x:Name="DescriptionText"
                               Style="{StaticResource InfoTextStyle}"
                               TextWrapping="Wrap"
                               MaxWidth="300"/>

                    <!-- Цена -->
                    <TextBlock Style="{StaticResource InfoTitleStyle}" 
                               Text="Цена:"/>
                    <TextBlock x:Name="PriceText"
                               Style="{StaticResource InfoTextStyle}"
                               FontWeight="Bold"/>

                    <!-- Наличие -->
                    <TextBlock Style="{StaticResource InfoTitleStyle}" 
                               Text="Наличие:"/>
                    <TextBlock x:Name="AvailabilityText"
                               Style="{StaticResource InfoTextStyle}"/>

                    <!-- Состав -->
                    <TextBlock Style="{StaticResource InfoTitleStyle}" 
                               Text="Состав:" 
                               Margin="10,20,10,5"/>

                    <!-- Список продуктов -->
                    <ItemsControl x:Name="ProductsList"
                                  Margin="10,0,10,10"
                                  MaxHeight="150">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#5A3413"
                                        CornerRadius="5"
                                        Margin="0,2"
                                        Padding="10,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding Product.Name}"
                                                   Style="{StaticResource ProductItemStyle}"/>
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding Count, StringFormat='{}{0} шт.'}"
                                                   Style="{StaticResource ProductItemStyle}"
                                                   Margin="20,2"/>
                                        <TextBlock Grid.Column="2" 
                                                   Text="{Binding Product.Measure}"
                                                   Style="{StaticResource ProductItemStyle}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <Border Grid.Row="2" 
                Background="#301A07" 
                Padding="15">
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                <!-- Счетчик -->
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center"
                            Margin="0,0,30,0">
                    <Button x:Name="MinusButton"
                            Content="-"
                            Width="40"
                            Height="40"
                            Background="#F0E8CC"
                            Foreground="#402309"
                            FontSize="18"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="MinusButton_Click"
                            Cursor="Hand"/>
                    <TextBlock x:Name="QuantityText"
                               Text="1" 
                               Foreground="{StaticResource TextLightColor}"
                               FontSize="18"
                               FontWeight="Bold"
                               Margin="20,0"
                               VerticalAlignment="Center"
                               Width="30"
                               TextAlignment="Center"/>
                    <Button x:Name="PlusButton"
                            Content="+"
                            Width="40"
                            Height="40"
                            Background="#F0E8CC"
                            Foreground="#402309"
                            FontSize="18"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Click="PlusButton_Click"
                            Cursor="Hand"/>
                </StackPanel>

                <!-- Кнопка добавления в заказ -->
                <Button x:Name="AddToOrderButton"
                        Content="Добавить в заказ"
                        Background="#F0E8CC"
                        Foreground="#402309"
                        Padding="20,10"
                        FontSize="14"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Click="AddToOrderButton_Click"
                        Cursor="Hand"
                        MinWidth="150"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>