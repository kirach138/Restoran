<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Вход в систему" 
        Height="450" 
        Width="400"
        MinHeight="400"
        MinWidth="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanMinimize"
        Background="#F0E8CC">

    <Window.Resources>
        <!-- Используем встроенный конвертер из WPF вместо пользовательского -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#402309"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="InputLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#402309"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="InputFieldStyle" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D4C8A8"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="PasswordFieldStyle" TargetType="PasswordBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D4C8A8"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#402309"/>
            <Setter Property="Foreground" Value="#F0E8CC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A3413"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#402309"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#402309"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0E8CC"/>
                    <Setter Property="Foreground" Value="#5A3413"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SeparatorTextStyle" TargetType="TextBlock">
            <Setter Property="Text" Value="или"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,15"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="LinkTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E90FF"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Margin" Value="5,0,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#4169E1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="#402309" 
                Padding="15">
            <TextBlock Text="Ресторан 'K'" 
                       Foreground="#F0E8CC"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Основное содержимое -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20">
                <TextBlock Text="Вход в систему" 
                           Style="{StaticResource TitleTextStyle}"/>

                <!-- Форма входа -->
                <StackPanel>
                    <TextBlock Text="Логин" Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="UsernameTextBox" 
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputFieldStyle}"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             KeyDown="InputField_KeyDown"/>

                    <TextBlock Text="Пароль" 
                               Style="{StaticResource InputLabelStyle}"
                               Margin="0,10,0,0"/>
                    <PasswordBox x:Name="PasswordBox" 
                                 Style="{StaticResource PasswordFieldStyle}"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 KeyDown="InputField_KeyDown"/>

                    <!-- Запомнить меня -->
                    <CheckBox x:Name="RememberMeCheckBox"
                              Content="Запомнить меня"
                              Margin="0,10,0,0"
                              Foreground="#402309"
                              IsChecked="{Binding RememberMe}"/>

                    <Button x:Name="LoginButton"
                            Content="Войти"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Command="{Binding LoginCommand}"
                            IsEnabled="{Binding IsLoginEnabled}"
                            IsDefault="True"/>

                    <!-- Забыли пароль --><!--
                    <TextBlock Text="Забыли пароль?" 
                               Style="{StaticResource LinkTextStyle}"
                               HorizontalAlignment="Right"
                               Margin="0,5,0,0"
                               MouseDown="ForgotPassword_MouseDown"/>-->
                </StackPanel>

                <!-- Разделитель -->
                <TextBlock Style="{StaticResource SeparatorTextStyle}"/>

                <!-- Вход по коду брони -->
                <StackPanel>
                    <TextBlock Text="Или войдите по коду бронирования" 
                               Style="{StaticResource InputLabelStyle}"/>
                    <TextBox x:Name="BookingCodeTextBox" 
                             Text="{Binding BookingCode, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource InputFieldStyle}"
                             GotFocus="TextBox_GotFocus"
                             LostFocus="TextBox_LostFocus"
                             KeyDown="InputField_KeyDown"/>

                    <Button Content="Войти по коду"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding LoginByBookingCodeCommand}"/>
                </StackPanel>

                <!-- Сообщения об ошибках/успехе -->
                <Border Background="#FFF0F0"
                        BorderBrush="#FFCCCC"
                        BorderThickness="1"
                        CornerRadius="5"
                        Padding="10"
                        Margin="0,20,0,0"
                        Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <TextBlock Text="{Binding ErrorMessage}"
                               Foreground="#D32F2F"
                               TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderThickness="0,1,0,0"
                BorderBrush="#E0D8C0"
                Padding="15">
            <Grid Height="60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!--<TextBlock Text="Нет аккаунта?" 
                           VerticalAlignment="Center"
                           Foreground="#402309"/>

                <Button Grid.Column="1"
                        Content="Зарегистрироваться"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding RegisterCommand}"/>-->
            </Grid>
        </Border>
    </Grid>
</Window>