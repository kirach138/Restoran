<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        
        Title="Ресторан 'K'" 
        Height="600" 
        Width="800"
        MinHeight="500"
        MinWidth="700">

    <Window.Resources>
        <!-- Используем встроенный BooleanToVisibilityConverter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Цветовая схема -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#402309"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#F0E8CC"/>
        <SolidColorBrush x:Key="TextLightColor" Color="#F0E8CC"/>
        <SolidColorBrush x:Key="TextDarkColor" Color="#402309"/>

        <!-- Стили для кнопок -->
        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextLightColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A3413"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextDarkColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#D4C8A8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E8DCC4"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextLightColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#5A3413"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TabItemHeaderStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border Name="Border" 
                                    Background="{StaticResource SecondaryColor}" 
                                    BorderBrush="#D4C8A8" 
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="4,4,0,0"
                                    Margin="2,2,2,0">
                                <ContentPresenter x:Name="ContentSite"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                ContentSource="Header"
                                                Margin="10,5"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F8F0D8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource PrimaryColor}" 
                Padding="10"
                BorderThickness="0,0,0,1"
                BorderBrush="#301A07">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип -->
                <Button Grid.Column="0"
                        Content="K" 
                        FontSize="28" 
                        FontWeight="Bold" 
                        Style="{StaticResource HeaderButtonStyle}"
                        Foreground="#F8B85B"
                        FontFamily="Segoe UI"
                        Padding="20,5"
                        Click="LogoButton_Click"/>

                <!-- Навигация -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center">
                    <Button x:Name="AdminButton" 
                            Content="Админ" 
                            Style="{StaticResource HeaderButtonStyle}"
                            Click="OpenWindowAdminButton_Click"
                            Visibility="{Binding IsAdmin, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                    <Button Content="Меню" 
                            Style="{StaticResource HeaderButtonStyle}"
                            Click="ButtonMenu_Click"/>
                    <Button Content="Столики" 
                            Style="{StaticResource HeaderButtonStyle}"
                            Click="ButtonTables_Click"/>
                    <Button Content="Заказы" 
                            Style="{StaticResource HeaderButtonStyle}"
                            Click="ButtonOrderAll_Click"/>
                </StackPanel>

                <!-- Кнопка входа -->
                <Button x:Name="ButtonUser"
                        Grid.Column="2"
                        Content="Войти" 
                        Style="{StaticResource HeaderButtonStyle}"
                        Click="ButtonUser_Click"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Background="{StaticResource SecondaryColor}">
            <TabControl x:Name="MainTabControl"
                        BorderThickness="0"
                        Background="Transparent">
                <TabItem Header="Главная" Style="{StaticResource TabItemHeaderStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Ресторан 'K'" 
                                       FontSize="28"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextDarkColor}"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>

                            <TextBlock Text="Добро пожаловать в наш ресторан!" 
                                       FontSize="16"
                                       Foreground="{StaticResource TextDarkColor}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,20"/>

                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,0,20"
                                    BorderBrush="#E0D8C0"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Очень вкусная еда! Приходите кушать к нам!" 
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="Любая кухня!!" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <Border Background="{StaticResource PrimaryColor}"
                                    CornerRadius="8"
                                    Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Наше местоположение" 
                                               FontSize="18"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextLightColor}"
                                               Margin="0,0,0,10"/>
                                    <TextBlock Text="Адрес: г. Иваново, ул. АААА, д. 1" 
                                               Foreground="{StaticResource TextLightColor}"/>
                                    <TextBlock Text="Телефон: +7 (XXX) XXX-XX-XX" 
                                               Foreground="{StaticResource TextLightColor}"/>
                                    <TextBlock Text="Часы работы: 10:00 - 23:00" 
                                               Foreground="{StaticResource TextLightColor}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- меню -->
                <TabItem Header="Меню" Style="{StaticResource TabItemHeaderStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Наше меню" 
               FontSize="24"
               FontWeight="Bold"
               HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

                            <!-- Список блюд из базы данных -->
                            <ItemsControl ItemsSource="{Binding DishVM.Dishes}"
                  Margin="0,0,0,20">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                        CornerRadius="5"
                        Margin="0,5"
                        Padding="10"
                        BorderBrush="#E0D8C0"
                        BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Иконка блюда -->
                                                <Border Grid.Column="0"
                                Width="50"
                                Height="50"
                                Background="#F8F0D8"
                                CornerRadius="5"
                                Margin="0,0,10,0">
                                                    <TextBlock Text="🍲"
                                       FontSize="24"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- Название и описание блюда -->
                                                <StackPanel Grid.Column="1">
                                                    <TextBlock Text="{Binding Name}"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"/>
                                                </StackPanel>

                                                <!-- Цена -->
                                                <TextBlock Grid.Column="2"
                                   Text="{Binding Price, StringFormat='{}{0} ₽'}"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="20,0,20,0"/>

                                                <!-- Кнопки действий -->
                                                <StackPanel Grid.Column="3" 
                                    Orientation="Horizontal">
                                                    <Button Content="Состав"
                                    Width="100"
                                    Margin="0,0,10,0"
                                    Padding="5"
                                    Background="Transparent"
                                    BorderBrush="{StaticResource PrimaryColor}"
                                    BorderThickness="1"
                                    Foreground="{StaticResource PrimaryColor}"
                                    Cursor="Hand"
                                    Click="OpenWindowDishButton_Click"
                                    Tag="{Binding ID}">
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="3"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>

                                                    <Button Content="Добавить"
                                    Width="100"
                                    Padding="5"
                                    Background="{StaticResource PrimaryColor}"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="AddToOrderButton_Click"
                                    Tag="{Binding ID}">
                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="3"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Блок для отображения текущего заказа -->
                            <Border Background="White"
                CornerRadius="8"
                Padding="15"
                Margin="20"
                BorderBrush="#E0D8C0"
                BorderThickness="1"
                Visibility="{Binding IsUserLoggedIn, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Текущий заказ" 
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                                    <!-- Список выбранных блюд -->
                                    <ItemsControl ItemsSource="{Binding CurrentOrder.Items}"
                          Margin="0,0,0,10"
                          MaxHeight="200"
                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F8F0D8"
                    CornerRadius="5"
                    Margin="0,2"
                    Padding="5">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" 
                               Text="{Binding Dish.Name}"
                               VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="1" 
                               Text="{Binding Quantity, StringFormat='{}{0} шт.'}"
                               Margin="10,0"
                               VerticalAlignment="Center"/>

                                                        <TextBlock Grid.Column="2" 
                               Text="{Binding TotalPrice, StringFormat='{}{0} ₽'}"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- НОВОЕ: Поле для ввода адреса -->
                                    <Border Background="#F8F8F8"
                            CornerRadius="5"
                            Padding="10"
                            Margin="0,0,0,10"
                            BorderBrush="#E0D8C0"
                            BorderThickness="1">
                                        <StackPanel>
                                            <TextBlock Text="Адрес доставки (необязательно)" 
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,5"
                                       Foreground="#333"/>

                                            <TextBox x:Name="AdressTextBox"
                                     Text="{Binding DeliveryAdress, UpdateSourceTrigger=PropertyChanged}"
                                     MaxLength="500"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     MinHeight="60"
                                     MaxHeight="100"
                                     Padding="8"
                                     FontSize="14"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"
                                     Background="White"
                                     >
                                                <TextBox.ToolTip>
                                                    <ToolTip>
                                                        Укажите адрес доставки или оставьте пустым для самовывоза
                                                    </ToolTip>
                                                </TextBox.ToolTip>
                                            </TextBox>

                                            <TextBlock Text="Можно оставить пустым для самовывоза из ресторана"
                                       FontSize="12"
                                       FontStyle="Italic"
                                       Foreground="#666"
                                       Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <Separator Margin="0,5"/>

                                    <TextBlock Text="{Binding CurrentOrder.TotalPrice, StringFormat='Итого: {0} ₽'}" 
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>

                                    <TextBlock Text="{Binding CurrentOrder.TotalItems, StringFormat='Блюд: {0} шт'}" 
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Сбросить"
                                Command="{Binding ResetOrderCommand}"
                                Width="120"
                                Margin="0,0,20,0"
                                Padding="10,5"
                                Background="#D32F2F"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="5"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                        <Button Content="Оформить заказ"
                                Command="{Binding CreateOrderCommand}"
                                Width="120"
                                Padding="10,5"
                                Background="{StaticResource PrimaryColor}"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                IsEnabled="{Binding CanPlaceOrder}">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="5"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header="Столики" Style="{StaticResource TabItemHeaderStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Бронирование столиков" 
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>

                            <!-- Фильтры бронирования -->
                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="15"
                                    Margin="0,0,0,20"
                                    BorderBrush="#E0D8C0"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock Text="Выберите параметры бронирования:" 
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Margin="0,0,0,10"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Дата -->
                                        <StackPanel Grid.Column="0" Margin="5">
                                            <TextBlock Text="Дата" Margin="0,0,0,5"/>
                                            <DatePicker x:Name="BookingDatePicker"
                                                        SelectedDate="{Binding TableBookingVM.SelectedBookingDate}"
                                                        DisplayDateStart="{x:Static sys:DateTime.Today}"
                                                        FontSize="14"
                                                        Padding="5"
                                                        BorderBrush="#D4C8A8"/>
                                        </StackPanel>

                                        <!-- Время -->
                                        <StackPanel Grid.Column="1" Margin="5">
                                            <TextBlock Text="Время" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="BookingTimeComboBox"
                                                      ItemsSource="{Binding TableBookingVM.AvailableBookingTimes}"
                                                      SelectedItem="{Binding TableBookingVM.SelectedBookingTime}"
                                                      FontSize="14"
                                                      Padding="5"
                                                      BorderBrush="#D4C8A8"
                                                      MinWidth="120"/>
                                        </StackPanel>

                                        <!-- Количество гостей -->
                                        <StackPanel Grid.Column="2" Margin="5">
                                            <TextBlock Text="Количество гостей" Margin="0,0,0,5"/>
                                            <ComboBox x:Name="GuestCountComboBox"
                                                      ItemsSource="{Binding TableBookingVM.GuestCounts}"
                                                      SelectedItem="{Binding TableBookingVM.SelectedGuestCount}"
                                                      FontSize="14"
                                                      Padding="5"
                                                      BorderBrush="#D4C8A8"
                                                      MinWidth="100"/>
                                        </StackPanel>

                                        <!-- Кнопка поиска -->
                                        <StackPanel Grid.Column="3" 
                                                    VerticalAlignment="Bottom"
                                                    Margin="10,0,0,0">
                                            <Button Content="Найти столики"
                                                    Command="{Binding TableBookingVM.SearchTablesCommand}"
                                                    Background="{StaticResource PrimaryColor}"
                                                    Foreground="{StaticResource TextLightColor}"
                                                    Padding="15,8"
                                                    FontSize="14"
                                                    FontWeight="SemiBold"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    MinWidth="120">
                                                <Button.Resources>
                                                    <Style TargetType="Border">
                                                        <Setter Property="CornerRadius" Value="5"/>
                                                    </Style>
                                                </Button.Resources>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Статус фильтрации -->
                                    <Border Background="#F8F0D8"
                                            CornerRadius="5"
                                            Padding="10"
                                            Margin="0,10,0,0"
                                            Visibility="{Binding TableBookingVM.FilterStatusVisibility}">
                                        <TextBlock Text="{Binding TableBookingVM.FilterStatusText}"
                                                   Foreground="{StaticResource TextDarkColor}"
                                                   FontSize="13"
                                                   TextWrapping="Wrap"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- Доступные столики -->
                            <TextBlock Text="Доступные столики:" 
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,10"/>

                            <!-- Сообщение, если столики не найдены -->
                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,0,20"
                                    BorderBrush="#E0D8C0"
                                    BorderThickness="1"
                                    Visibility="{Binding TableBookingVM.NoTablesMessageVisibility}">
                                <TextBlock Text="{Binding TableBookingVM.NoTablesMessageText}"
                                           FontSize="14"
                                           Foreground="#666"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <!-- Сетка столиков -->
                            <ItemsControl ItemsSource="{Binding TableBookingVM.AvailableTables}"
                                          x:Name="TablesContainer"
                                          Margin="0,0,0,20">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" 
                                                   HorizontalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="80"
                                                Height="80"
                                                Margin="10"
                                                CornerRadius="10"
                                                Background="{Binding StatusBackground}"
                                                BorderBrush="{Binding StatusBorderColor}"
                                                BorderThickness="2">
                                            <Button Command="{Binding SelectTableCommand}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand">
                                                <Button.Template>
                                                    <ControlTemplate>
                                                        <Grid>
                                                            <!-- Номер столика -->
                                                            <TextBlock Text="{Binding Number}"
                                                                       FontSize="24"
                                                                       FontWeight="Bold"
                                                                       Foreground="White"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>

                                                            <!-- Количество мест -->
                                                            <TextBlock Text="{Binding Places, StringFormat='{}{0} мест'}"
                                                                       FontSize="11"
                                                                       Foreground="White"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Bottom"
                                                                       Margin="0,0,0,5"/>

                                                            <!-- Цена -->
                                                            <TextBlock Text="{Binding Cost, StringFormat='{}{0} ₽'}"
                                                                       FontSize="11"
                                                                       Foreground="White"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Top"
                                                                       Margin="0,5,0,0"/>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Button.Template>
                                            </Button>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <!-- Блок итогов -->
                            <Border Background="{StaticResource PrimaryColor}"
                                    CornerRadius="8"
                                    Padding="15"
                                    Visibility="{Binding TableBookingVM.SelectedTableVisibility}">
                                <StackPanel>
                                    <TextBlock Text="{Binding TableBookingVM.SelectedTableText}" 
                                               Foreground="{StaticResource TextLightColor}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10"
                                               FontSize="14"/>
                                    <Button Content="Забронировать"
                                            Command="{Binding TableBookingVM.BookTableCommand}"
                                            Style="{StaticResource ActionButtonStyle}"
                                            HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Заказы" Style="{StaticResource TabItemHeaderStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Мои заказы" 
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>

                            <!-- Кнопка обновления -->
                            <Button Content="Обновить"
                                    Command="{Binding OrderVM.RefreshCommand}"
                                    HorizontalAlignment="Right"
                                    Margin="0,0,0,10"
                                    Padding="10,5"
                                    Background="#402309"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="5"/>
                                    </Style>
                                </Button.Resources>
                            </Button>

                            <!-- Сообщение, если нет заказов -->
                            <Border Background="White"
                                    CornerRadius="8"
                                    Padding="20"
                                    Margin="0,0,0,10"
                                    BorderBrush="#E0D8C0"
                                    BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <!-- Показываем только когда количество заказов равно 0 -->
                                            <DataTrigger Binding="{Binding OrderVM.Orders.Count}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="У вас пока нет заказов"
                                           FontSize="16"
                                           Foreground="#666"
                                           HorizontalAlignment="Center"/>
                            </Border>

                            <!-- Список заказов -->
                            <ItemsControl ItemsSource="{Binding OrderVM.Orders}"
                                          Margin="0,0,0,20">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="White"
                                                CornerRadius="8"
                                                Padding="15"
                                                Margin="0,0,0,10"
                                                BorderBrush="#E0D8C0"
                                                BorderThickness="1">
                                            <StackPanel>
                                                <!-- Номер заказа и дата -->
                                                <Grid Margin="0,0,0,10">
                                                    <TextBlock Text="{Binding ID, StringFormat='Заказ №{0}'}" 
                                                               FontSize="16"
                                                               FontWeight="Bold"/>
                                                    <TextBlock Text="{Binding Time, StringFormat='{}{0:dd.MM.yyyy HH:mm}'}"
                                                               HorizontalAlignment="Right"
                                                               Foreground="#666"/>
                                                </Grid>

                                                <!-- Список блюд в заказе -->
                                                <ItemsControl ItemsSource="{Binding Ord_dish}"
                                                              Margin="0,0,0,10">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Margin="0,2">
                                                                <TextBlock Text="{Binding Dish.Name}"/>
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                                    <TextBlock Text="{Binding Count, StringFormat='{}{0} шт. × '}"
                                                                               Margin="0,0,5,0"/>
                                                                    <TextBlock Text="{Binding Dish.Price, StringFormat='{}{0} ₽'}"
                                                                               Margin="0,0,10,0"/>
                                                                    <TextBlock Text="{Binding Cost, StringFormat='{}{0} ₽'}"
                                                                               FontWeight="Bold"/>
                                                                </StackPanel>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>

                                                <!-- Информация о заказе -->
                                                <Grid>
                                                    <StackPanel>
                                                        <TextBlock Text="{Binding Count, StringFormat='Сумма: {0} ₽'}"
                                                                   FontWeight="Bold"/>

                                                        <!-- Адрес (если есть) -->
                                                        <TextBlock Text="{Binding Adress, StringFormat='Адрес: {0}'}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <!-- Просто проверка на null -->
                                                                        <DataTrigger Binding="{Binding Adress}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                        <!-- Статус заказа (просто текст) -->
                                                        <TextBlock Text="{Binding Status.Name, StringFormat='Статус: {0}'}"/>

                                                        <!-- Официант (если есть) -->
                                                        <TextBlock Text="{Binding Waiter.User.Name, StringFormat='Официант: {0}'}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Waiter}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>

                                                        <!-- Доставка (если есть) -->
                                                        <TextBlock Text="{Binding Delivery.User.Name, StringFormat='Курьер: {0}'}">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Delivery}" Value="{x:Null}">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </StackPanel>

                                                    <!-- Кнопка отмены -->
                                                    <!-- Кнопка отмены -->
                                                    <Button Content="Отменить"
        Width="100"
        HorizontalAlignment="Right"
        VerticalAlignment="Bottom"
        Padding="10,5"
        Background="#D32F2F"
        Foreground="White"
        BorderThickness="0"
        Cursor="Hand"
        Command="{Binding DataContext.OrderVM.CancelOrderCommand, 
                         RelativeSource={RelativeSource AncestorType=Window}}"
        CommandParameter="{Binding ID}">

                                                        <!-- Стили для видимости кнопки -->
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                <Style.Triggers>
                                                                    <!-- Скрываем для отмененных или завершенных заказов -->
                                                                    <DataTrigger Binding="{Binding Status.ID}" Value="3">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status.ID}" Value="4">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status.ID}" Value="5">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>

                                                                    <!-- Или по названию статуса -->
                                                                    <DataTrigger Binding="{Binding Status.Name}" Value="Отменен">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status.Name}" Value="Отменён">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status.Name}" Value="Выполнен">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status.Name}" Value="Доставлен">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Status.Name}" Value="Завершен">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Setter Property="IsEnabled" Value="False"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>

                                                        <Button.Resources>
                                                            <Style TargetType="Border">
                                                                <Setter Property="CornerRadius" Value="5"/>
                                                            </Style>
                                                        </Button.Resources>
                                                    </Button>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource PrimaryColor}" 
                Padding="10"
                BorderThickness="0,1,0,0"
                BorderBrush="#301A07">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="© Ресторан 'K', 2025" 
                          Foreground="{StaticResource TextLightColor}"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0"/>
                <!--<TextBlock Text="Контакты: " 
                          Foreground="{StaticResource TextLightColor}"
                          VerticalAlignment="Center"
                          Margin="10,0,5,0"/>
                <TextBox Text="example@restaurant.ru" 
                         Width="200" 
                         Height="25"
                         Padding="5"
                         BorderThickness="1"
                         BorderBrush="#D4C8A8"/>
                <Button Content="Отправить" 
                        Margin="10,0"
                        Padding="10,5"
                        Background="#5A3413"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="ApplyButton_Click"/>-->
            </StackPanel>
        </Border>
    </Grid>
</Window>